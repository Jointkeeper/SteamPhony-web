{
  "name": "steamphony-api",
  "version": "0.1.0",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'Build completed'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "postinstall": "prisma generate",
    "start:docker": "prisma migrate deploy && nodemon src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "prisma:studio": "prisma studio",
    "docker:up": "docker-compose -f docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker-compose.yml down",
    "docs:validate": "swagger-cli validate openapi.yaml",
    "docs:generate": "redoc-cli build openapi.yaml -o docs/index.html"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.5",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.10.0",
    "bcryptjs": "^2.4.3",
    "@prisma/client": "^5.13.0",
    "xss-clean": "^0.1.1",
    "node-fetch": "^3.3.2",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.6",
    "eslint": "^9.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3",
    "prisma": "^5.13.0",
    "@apidevtools/swagger-parser": "^10.1.0",
    "redoc-cli": "^0.13.21"
  }
} 